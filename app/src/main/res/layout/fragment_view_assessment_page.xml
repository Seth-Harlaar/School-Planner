<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.view_assessment_page"
    android:orientation="vertical">

    <TextView
        android:id="@+id/assessment_view_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Assessment title"/>

    <TextView
        android:id="@+id/assessment_view_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Assessment description"/>

    <TextView
        android:id="@+id/assessment_view_weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Assessment weight"/>

    <TextView
        android:id="@+id/assessment_view_importance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Assessment importance"/>

    <TextView
        android:id="@+id/assessment_view_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Assessment progress"/>

    <TextView
        android:id="@+id/assessment_view_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Assessment type"/>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/assessment_view_edit_assessment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_margin="16dp"
        android:clickable="true"
        android:focusable="true"
        android:src="@android:drawable/ic_menu_edit" />

</LinearLayout>